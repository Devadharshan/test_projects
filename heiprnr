@echo off
echo ===== Automation Started: %date% %time% =====

REM -----------------------------------------------------
REM Step 1: Run PowerShell Script
REM -----------------------------------------------------
echo Running PowerShell script...
powershell -ExecutionPolicy Bypass -File "C:\path\to\generate_csv.ps1"

echo Waiting 30 seconds before next script...
timeout /t 30 /nobreak
echo.

REM -----------------------------------------------------
REM Step 2: Run Python Script 1
REM -----------------------------------------------------
echo Running Python script 1...
"C:\path\to\python.exe" "C:\path\to\script1.py"

echo Waiting 20 seconds before next script...
timeout /t 20 /nobreak
echo.

REM -----------------------------------------------------
REM Step 3: Run Python Script 2
REM -----------------------------------------------------
echo Running Python script 2...
"C:\path\to\python.exe" "C:\path\to\script2.py"

echo Waiting 20 seconds before finishing...
timeout /t 20 /nobreak
echo.

echo ===== Automation Finished: %date% %time% =====
exit