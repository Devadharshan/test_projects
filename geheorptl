import os
import pandas as pd
from prometheus_client import CollectorRegistry, Gauge, push_to_gateway
from datetime import datetime, timedelta, timezone

# ---------------- CONFIG ----------------
CSV_DIR = r"C:\path\to\csvs"
PUSHGATEWAY_URL = "http://localhost:9091"
JOB_BP = "bp_summary"
IST = timezone(timedelta(hours=5, minutes=30))

WINDOWS = {
    "today": 0,
    "yesterday": 1,
    "last7days": 7,
    "last30days": 30
}

# ---------------- HELPERS ----------------
def parse_date_from_filename(filename):
    try:
        return datetime.strptime(filename.split("__")[-1].split(".csv")[0], "%Y-%m-%d").date()
    except:
        return None

def get_csv_files_within_days(base_dir, days):
    cutoff = datetime.now(IST).date() - timedelta(days=days)
    files = []
    for f in os.listdir(base_dir):
        if f.endswith(".csv") and "_summary" not in f:
            file_date = parse_date_from_filename(f)
            if file_date and file_date >= cutoff:
                files.append((os.path.join(base_dir, f), file_date))
    return files

# ---------------- MAIN ----------------
def push_metrics():
    registry = CollectorRegistry()

    # --- Gauges ---
    g_total_trades = Gauge(
        "bp_total_trades",
        "Total trades per BP",
        ["bp_name", "window", "file_date", "no_of_trades"],
        registry=registry
    )
    g_total_duration = Gauge(
        "bp_total_duration",
        "Total duration per BP",
        ["bp_name", "window", "file_date", "no_of_trades"],
        registry=registry
    )
    g_avg_duration_per_trade = Gauge(
        "bp_avg_duration_per_trade",
        "Avg duration per trade per BP",
        ["bp_name", "window", "file_date", "no_of_trades"],
        registry=registry
    )
    g_job_count = Gauge(
        "bp_job_count",
        "Number of jobs per BP",
        ["bp_name", "window", "file_date", "no_of_trades"],
        registry=registry
    )
    g_job_avg_duration_per_trade = Gauge(
        "bp_job_avg_duration_per_trade",
        "Avg duration per trade per BP+Job",
        ["bp_name", "job_details", "window", "file_date", "no_of_trades"],
        registry=registry
    )

    # --- Process each window ---
    for window_name, window_days in WINDOWS.items():
        files = get_csv_files_within_days(CSV_DIR, window_days)
        if not files:
            print(f"No files for window {window_name}")
            continue

        for file_path, file_date in files:
            try:
                df = pd.read_csv(file_path)
                df.columns = [c.strip().upper() for c in df.columns]

                required = ["BP NAME", "JOBDETAILS", "DURATION", "NO OF TRADES", "DURATIONPERTRADE"]
                if not all(col in df.columns for col in required):
                    print(f"Missing required columns in {file_path}")
                    continue

                # Convert numeric fields
                df["DURATION"] = pd.to_numeric(df["DURATION"], errors="coerce").fillna(0)
                df["NO OF TRADES"] = pd.to_numeric(df["NO OF TRADES"], errors="coerce").fillna(0)
                df["DURATIONPERTRADE"] = pd.to_numeric(df["DURATIONPERTRADE"], errors="coerce").fillna(0)

                # ---- BP-level aggregation ----
                bp_group = df.groupby("BP NAME").agg(
                    total_trades=("NO OF TRADES", "sum"),
                    total_duration=("DURATION", "sum"),
                    job_count=("BP NAME", "count")
                ).reset_index()

                bp_group["avg_duration_per_trade"] = bp_group["total_duration"] / bp_group["total_trades"].replace(0, 1)

                for _, row in bp_group.iterrows():
                    bp = row["BP NAME"]
                    trades = int(row["total_trades"])
                    g_total_trades.labels(bp, window_name, str(file_date), trades).set(row["total_trades"])
                    g_total_duration.labels(bp, window_name, str(file_date), trades).set(row["total_duration"])
                    g_avg_duration_per_trade.labels(bp, window_name, str(file_date), trades).set(row["avg_duration_per_trade"])
                    g_job_count.labels(bp, window_name, str(file_date), trades).set(row["job_count"])

                # ---- BP+Job aggregation ----
                job_group = df.groupby(["BP NAME", "JOBDETAILS"]).agg(
                    total_trades=("NO OF TRADES", "sum"),
                    avg_duration_per_trade=("DURATIONPERTRADE", "mean")
                ).reset_index()

                for _, row in job_group.iterrows():
                    bp = row["BP NAME"]
                    job = row["JOBDETAILS"]
                    trades = int(row["total_trades"])
                    g_job_avg_duration_per_trade.labels(bp, job, window_name, str(file_date), trades).set(
                        row["avg_duration_per_trade"]
                    )

            except Exception as e:
                print(f"Error processing {file_path}: {e}")

    push_to_gateway(PUSHGATEWAY_URL, job=JOB_BP, registry=registry)
    print("âœ… Metrics pushed successfully!")

if __name__ == "__main__":
    push_metrics()